#打印小明的信息

info_tuple =("小明",180,17,65)
print("%s的身高是%dcm 年龄是%d岁 体重是%.2f公斤"%info_tuple)

info_str = ("%s的身高是%dcm 年龄是%d岁 体重是%.2f公斤"%info_tuple)
print(info_str)



# #计算0到100所有数字的累加和
# i = 0
# a = 0
# #使用while进行循环
# while i <100:
#     a += i
#     print(a)
#     i += 1


#计算0到100之间偶数求和
i = 0
result = 0
while i < 100 :
    if i % 2 != 0:
        result += i
        print(result)
    i += 1
